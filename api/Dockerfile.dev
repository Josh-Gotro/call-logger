FROM maven:3.9-eclipse-temurin-17

WORKDIR /app

# Copy Maven wrapper
COPY mvnw .
COPY .mvn .mvn

# Make mvnw executable
RUN chmod +x mvnw

# Copy pom.xml and download dependencies
COPY pom.xml .
RUN ./mvnw dependency:go-offline

# Copy source code
COPY src ./src

# Expose port
EXPOSE 8080 5005

# Run Spring Boot with hot reload
CMD ["./mvnw", "spring-boot:run"]